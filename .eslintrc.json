{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals" : {
        "J" : true,
        "chai" : true,
        "describe" : true,
        "it" : true,
        "expect" : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion" : 2017
    },
    "rules": {
        "no-console" : 0,
        "indent": [
            "error",
            4,
            { "SwitchCase" : 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        //"quotes": [ "error", "single" ],
        "semi": [
            "error",
            "always",
            { "omitLastInOneLineBlock" : true }
        ]
    }
}
